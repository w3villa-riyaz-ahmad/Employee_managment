<h1 class ="text-center bg-primary">List of all employee</h1>


   <div class="d-flex justify-content-between align-items-center mb-3">
  <!-- Logged-in User Info -->
  <div class="text-white">
    <span>ID: <%= current_user.id %> | Email: <%= current_user.email %></span>
  </div>

  <!-- Sign Out Button -->
  <span>
   <%= link_to "Sign Out", destroy_user_session_path,
      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" },
      class: "btn btn-danger" %>

  </span>
</div>

<%= link_to "Add New Employee", new_employee_path, class: "btn btn-primary  mt-5 mb-2" %>


<table class="table table-striped table-bordered table-hover table-primary">
  <thead class="table-primary">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Salary</th>
      <th scope="col">Role</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <th scope="row"><%= employee.id %></th>
        <td><%= employee.name %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.role %></td>
        
        <td>
  <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-warning" %>

  <%= link_to "Delete",
      employee_path(employee),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
      class: "btn btn-danger" %>

  <%= link_to 'Show', employee_path(employee), class: "btn btn-info" %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>

