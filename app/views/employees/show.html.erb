<h1 class="text-center my-4">HR Mitra</h1>

<div class="container">
  <div class="card shadow-sm mx-auto p-4" style="max-width: 600px;">

    <div class="mb-3">
      <h4 class="text-primary">Employee Information</h4>
      <hr>
    </div>

    <p>
      <strong>Name:</strong>
      <span class="ms-2"><%= @employee.name %></span>
    </p>

    <p>
      <strong>Salary:</strong>
      <span class="ms-2"><%= @employee.salary %></span>
    </p>

    <p>
      <strong>Role:</strong>
      <span class="ms-2"><%= @employee.role %></span>
    </p>
     
    
    <p>
      <strong>Documents:</strong>
      <ul class="ms-4">
        <% @employee.documents.each do |document| %>
          <li>
            <%= document.name %>
            <% if document.image.attached? %>
              - <%= link_to "View Document", url_for(document.image), target: "_blank" %>
            <% else %>
              - No file attached
            <% end %>
          </li>
        <% end %>
      </ul>
   </p>

    <hr>

    <div class="d-flex justify-content-center  mt-3">
      <%= link_to 'Edit', 
          edit_employee_path(@employee), 
          class: "btn btn-warning me-2" %>

      <%= link_to 'Back', 
          employees_path, 
          class: "btn btn-secondary me-2" %>

      <%= link_to "Delete",
          employee_path(@employee),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "btn btn-danger me-2" %>
    </div>

  </div>
</div>
