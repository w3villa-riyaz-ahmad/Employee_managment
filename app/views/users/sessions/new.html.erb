<div class="card shadow-lg mx-auto p-4"
     style="max-width: 420px; margin-top: 60px; background-color: #0d0d0d; border-radius: 15px;">

  <!-- Header -->
  <div class="card-header text-white text-center"
       style="background-color: #185745; border-radius: 10px;">
    <h2 class="mb-0">Sign In</h2>
  </div>

  <div class="card-body text-white">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <!-- Email -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email",
              autofocus: true, autocomplete: "email" %>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password",
              autocomplete: "current-password" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="d-grid">
        <%= f.submit "Log In", class: "btn btn-success btn-lg" %>
      </div>

    <% end %>

    <div class="mt-3 text-center">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>
