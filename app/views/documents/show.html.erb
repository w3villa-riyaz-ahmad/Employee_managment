<h1 class="text-center my-4">HR Mitra</h1>

<div class="container">
  <div class="card shadow-sm mx-auto p-4" style="max-width: 600px;">

    <div class="mb-3">
      <h4 class="text-primary">Document Information</h4>
      <hr>
    </div>


       <p>
      <strong>Doc_ID:</strong>
      <span class="ms-2"><%= @document.id %></span>
    </p>

    <p>
      <strong>Doc_Name:</strong>
      <span class="ms-2"><%= @document.name %></span>
    </p>

    <p>
      <strong>Doc_type</strong>
      <span class="ms-2"><%= @document.doc_type %></span>
    </p>

    <p>
      <strong>Employee_Name:</strong>
      <span class="ms-2"><%= @document.employee.name  %></span>
    </p>

    <p>
      <strong>Document Image:</strong><br>
      <% if @document.image.attached? %>
        <%= image_tag @document.image.variant(resize_to_limit: [300, 300]) %>
      <% else %>
        <span class="ms-2">No image uploaded</span>
      <% end %>
    </p>


    <hr>

    <div class="d-flex justify-content-center  mt-1">
      <%= link_to 'Edit', 
          edit_document_path(@document), 
          class: "btn btn-warning me-1" %>

     <%= link_to "Back", documents_path, class: "btn btn-secondary  me-1" %>

      <%= link_to "Delete",
          document_path(@document),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "btn btn-danger me-1" %>
    </div>

  </div>
</div>
